<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/mainBack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/main_back"
        android:contentDescription="@string/mainBack" />

    <LinearLayout
        android:id="@+id/fieldStatistic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/fieldSignature"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewMode"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mode"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="@color/colorWhite"
                />

            <TextView
                android:id="@+id/textViewBestTime"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Best time"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                android:textSize="24sp"
                android:textColor="@color/colorWhite"
                />

            <TextView
                android:id="@+id/textViewCountGame"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="24sp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:text="Number of games"
                android:textColor="@color/colorWhite"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fieldLow"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textViewModeLow"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="LOW"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="24sp"
                android:background="@drawable/style_btn_stroke"
                android:textColor="@color/colorWhite"
                />

            <TextView
                android:id="@+id/textViewBestTimeLow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Best time"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorWhite"
                />

            <TextView
                android:id="@+id/textViewCountGameLow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Number of games"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorWhite"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fieldMedium"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textViewModeMedium"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="MEDIUM"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="24sp"
                android:background="@drawable/style_btn_stroke"
                android:textColor="@color/colorWhite"
                />

            <TextView
                android:id="@+id/textViewBestTimeMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Best time"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorWhite"
                />

            <TextView
                android:id="@+id/textViewCountGameMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="Number of games"
                android:textColor="@color/colorWhite"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/fieldHard"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewModeHard"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="HARD"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="24sp"
                android:background="@drawable/style_btn_stroke"
                android:textColor="@color/colorWhite"
                />

            <TextView
                android:id="@+id/textViewBestTimeHard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Best time"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorWhite"
                />

            <TextView
                android:id="@+id/textViewCountGameHard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Number of games"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorWhite"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fieldExtra"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewModeExtra"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="EXTRA"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="24sp"
                android:background="@drawable/style_btn_stroke"
                android:textColor="@color/colorWhite"
                />

            <TextView
                android:id="@+id/textViewBestTimeExtra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="Best time"
                android:textColor="@color/colorWhite"
                />

            <TextView
                android:id="@+id/textViewCountGameExtra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="Number of games"
                android:textColor="@color/colorWhite"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
